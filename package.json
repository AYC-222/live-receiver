{
    "name":                   "LiVE-Receiver",
    "version":                "0.9.3",
    "description":            "Live Video Experience (LiVE) Receiver",
    "keywords":               [ "live", "video", "experience", "receiver" ],
    "private":                true,
    "author": {
        "name":               "Dr. Ralf S. Engelschall",
        "url":                "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                        "8.2.5",
        "electron-builder":                "22.6.0",
        "nodemon":                         "2.0.3",
        "shelljs":                         "0.8.4",
        "glob":                            "7.1.6",
        "babel-eslint":                    "10.1.0",
        "eslint":                          "6.8.0",
        "eslint-config-standard":          "14.1.1",
        "eslint-plugin-standard":          "4.0.1",
        "eslint-plugin-promise":           "4.2.1",
        "eslint-plugin-import":            "2.20.2",
        "eslint-plugin-node":              "11.1.0",
        "eslint-plugin-vue":               "6.2.2",
        "cross-env":                       "7.0.2",
        "cross-zip":                       "3.0.0"
    },
    "dependencies": {
        "jsonfile":                        "6.0.1",
        "syspath":                         "1.0.1",
        "execa":                           "4.0.0",
        "vue":                             "2.6.11",
        "vue-devtools":                    "5.1.3",
        "vue-multiselect":                 "2.1.6",
        "v-tooltip":                       "2.0.3",
        "cropperjs":                       "1.5.6",
        "http-vue-loader":                 "1.4.2",
        "less":                            "3.11.1",
        "@fortawesome/fontawesome-free":   "5.13.0",
        "typopro-web":                     "4.2.3",
        "mousetrap":                       "1.6.5",
        "animejs":                         "3.2.0",
        "howler":                          "2.1.3",
        "moment":                          "2.25.3",
        "sprintfjs":                       "1.2.15",
        "@rse/soundfx":                    "0.9.7",
        "eventemitter2":                   "6.4.0",
        "throttle-debounce":               "2.1.0",
        "mp4box":                          "0.3.20",
        "pure-uuid":                       "1.6.0",
        "image-data-uri":                  "2.0.1",
        "mqtt":                            "4.0.0",
        "mqtt-json-rpc":                   "1.1.2"
    },
    "main":                  "./app-main.js",
    "build": {
        "appId":             "com.engelschall.apps.live.receiver",
        "asar":              true,
        "asarUnpack":        [ "ffmpeg/*" ],
        "removePackageScripts": true,
        "directories": {
            "output":        "dist"
        },
        "protocols": {
            "name":          "LiVE Receiver",
            "schemes":       [ "live" ]
        },
        "mac": {
            "category":      "com.engelschall.apps",
            "icon":          "app-res-icon.png",
            "files": [
                "!*.ai",
                "!node_modules/electron-prebuilt/**",
                "!node_modules/electron-builder/**",
                "!ffmpeg/ffmpeg-win-*"
            ]
        },
        "win": {
            "icon":          "app-res-icon.png",
            "files": [
                "!*.ai",
                "!node_modules/electron-prebuilt/**",
                "!node_modules/electron-builder/**",
                "!ffmpeg/ffmpeg-mac-*"
            ]
        }
    },
    "scripts": {
        "setup":             "npm install --only-production --global-style",
        "lint":              "eslint --config eslint.yaml --ext js,vue *.js *.vue",
        "start":             "electron app-main.js",
        "start-dev":         "cross-env DEBUG=1 nodemon --exec \"npm start\" --watch . --ext html,css,js,vue",
        "package":           "node package.js"
    }
}
