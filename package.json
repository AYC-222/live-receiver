{
    "name":                   "LiVE-Receiver",
    "version":                "1.0.6",
    "description":            "Live Video Experience (LiVE) Receiver",
    "keywords":               [ "live", "video", "experience", "receiver" ],
    "license":                "GPL-3.0-only",
    "private":                true,
    "author": {
        "name":               "Dr. Ralf S. Engelschall",
        "url":                "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                        "9.0.4",
        "electron-builder":                "22.7.0",
        "nodemon":                         "2.0.4",
        "shelljs":                         "0.8.4",
        "glob":                            "7.1.6",
        "eslint":                          "7.2.0",
        "eslint-config-standard":          "14.1.1",
        "eslint-plugin-standard":          "4.0.1",
        "eslint-plugin-promise":           "4.2.1",
        "eslint-plugin-import":            "2.21.2",
        "eslint-plugin-node":              "11.1.0",
        "eslint-plugin-vue":               "6.2.2",
        "cross-env":                       "7.0.2",
        "cross-zip":                       "3.1.0",
        "npm-install-fetch":               "1.2.1",
        "npm-run-all":                     "4.1.5",
        "modclean":                        "3.0.0-beta.1"
    },
    "dependencies": {
        "electron-log":                    "4.2.1",
        "jsonfile":                        "6.0.1",
        "syspath":                         "1.0.1",
        "execa":                           "4.0.2",
        "moment":                          "2.26.0",
        "mousetrap":                       "1.6.5",
        "vue":                             "2.6.11",
        "vue-multiselect":                 "2.1.6",
        "v-tooltip":                       "2.0.3",
        "cropperjs":                       "1.5.7",
        "http-vue-loader":                 "1.4.2",
        "less":                            "3.11.3",
        "@fortawesome/fontawesome-free":   "5.13.0",
        "typopro-web":                     "4.2.3",
        "animejs":                         "3.2.0",
        "howler":                          "2.2.0",
        "@rse/soundfx":                    "0.9.8",
        "throttle-debounce":               "2.2.1",
        "mp4box":                          "0.3.20",
        "pure-uuid":                       "1.6.0",
        "image-data-uri":                  "2.0.1",
        "mqtt":                            "4.1.0"
    },
    "main":                  "./app-main.js",
    "build": {
        "appId":             "com.engelschall.apps.live.receiver",
        "asar":              true,
        "asarUnpack":        [ "app-main-relay-videostream.d/ffmpeg*" ],
        "removePackageScripts": true,
        "compression":       "normal",
        "directories": {
            "output":        "dist"
        },
        "protocols": {
            "name":          "LiVE Receiver",
            "schemes":       [ "live" ]
        },
        "mac": {
            "category":      "com.engelschall.apps",
            "identity":      null,
            "icon":          "app-res-icon.png",
            "files": [
                "!*.ai",
                "!node_modules/electron-builder/**",
                "!node_modules/nodemon/**",
                "!node_modules/shelljs/**",
                "!node_modules/glob/**",
                "!node_modules/babel-eslint/**",
                "!node_modules/eslint*/**",
                "!node_modules/cross-env/**",
                "!node_modules/cross-zip/**",
                "!node_modules/npm-install-fetch/**",
                "!node_modules/npm-run-all/**",
                "!node_modules/modclean/**",
                "!node_modules/electron/dist/**",
                "!node_modules/dmg-builder/**",
                "!node_modules/app-builder-bin/**",
                "!node_modules/app-builder-lib/**",
                "!node_modules/7zip-bin/**",
                "!node_modules/npm/**"
            ]
        },
        "win": {
            "icon":          "app-res-icon.png",
            "files": [
                "!*.ai",
                "!node_modules/electron-builder/**",
                "!node_modules/nodemon/**",
                "!node_modules/shelljs/**",
                "!node_modules/glob/**",
                "!node_modules/babel-eslint/**",
                "!node_modules/eslint*/**",
                "!node_modules/cross-env/**",
                "!node_modules/cross-zip/**",
                "!node_modules/npm-install-fetch/**",
                "!node_modules/npm-run-all/**",
                "!node_modules/modclean/**",
                "!node_modules/electron/dist/**",
                "!node_modules/dmg-builder/**",
                "!node_modules/app-builder-bin/**",
                "!node_modules/app-builder-lib/**",
                "!node_modules/7zip-bin/**",
                "!node_modules/npm/**"
            ],
            "target": [ {
                "target":    "portable",
                "arch":      [ "x64" ]
            } ]
        },
        "portable": {
            "useZip":        true,
            "artifactName":  "LiVE-Receiver.exe"
        }
    },
    "scripts": {
        "install":           "npm-run-all -s install:fetch install:squeeze",
        "install:fetch":     "npm-install-fetch --config npm-install.yaml",
        "install:squeeze":   "modclean -p . -r -P -n default:safe",
        "setup":             "npm install --only-production --global-style",
        "lint":              "eslint --config eslint.yaml --ext js,vue *.js *.vue",
        "start":             "electron app-main.js",
        "start-dev":         "cross-env DEBUG=1 nodemon --exec \"npm start\" --watch . --ext html,css,js,vue",
        "package":           "node npm-package.js"
    }
}
